.group-contents
  .group-contents__box
    .group-contents__box--name
      = message.user.name
    .group-contents__box--times
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .group-contents__comment
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
